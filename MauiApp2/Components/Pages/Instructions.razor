@page "/instructions"
<MudCarousel Class="mud-width-full" Style="height:90dvh;" ShowArrows="true" ShowBullets="true" EnableSwipeGesture="true" TData="object">
    <MudCarouselItem Transition="@Transition.Slide" Color="@Color.Surface">
        <div style="display:flex; overflow:hidden; flex-direction:column; justify-content:center; align-items:center;">
            <div style="display:flex; flex-direction:row; justify-content:center; width:100%; height:100%">
                <MudImage Src="images/hot.png" Height="500" Alt="Swedish Farm House" Elevation="0" Class="rounded-lg ma-4" />
            </div>
            <MudText Style="margin-top:-2rem; font-family:Impact;" Typo="Typo.h4">Горячие туры</MudText>
            <MudText Style=" font-family:Impact;" Typo="Typo.body1">Смотрите туры с сумасшедшими скидками</MudText>
        </div>
       
    </MudCarouselItem>
    <MudCarouselItem Transition="@Transition.Slide" Color="@Color.Surface">
        <div style="display:flex; overflow:hidden; flex-direction:column; justify-content:center; align-items:center;">
            <div style="display:flex; flex-direction:row; justify-content:center; width:100%; height:100%">
                <MudImage Src="images/search.png" Height="500" Alt="Swedish Farm House" Elevation="0" Class="rounded-lg ma-4" />
            </div>
            <MudText Style="margin-top:-2rem; font-family:Impact;" Typo="Typo.h4">Поиск</MudText>
            <MudText Style=" font-family:Impact;" Typo="Typo.body1">Ищите туры в любую доступную страну</MudText>
        </div>
    </MudCarouselItem>
    <MudCarouselItem Transition="@Transition.Slide" Color="@Color.Surface">
        <div style="display:flex; overflow:hidden; flex-direction:column; justify-content:center; align-items:center;">
            <div style="display:flex; flex-direction:row; justify-content:center; width:100%; height:100%">
                <MudImage Src="images/tour.png" Height="500" Alt="Swedish Farm House" Elevation="0" Class="rounded-lg ma-4" />
            </div>
            <MudText Style="margin-top:-2rem; font-family:Impact;" Typo="Typo.h4">Путешествуйте</MudText>
            <MudButton Variant="Variant.Filled" EndIcon="@Icons.Material.Filled.ArrowDownward" Color="Color.Primary" >
                Перейти к приложению
            </MudButton>
        </div>
    </MudCarouselItem>
</MudCarousel>

